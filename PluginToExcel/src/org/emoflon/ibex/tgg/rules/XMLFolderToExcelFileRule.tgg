#using PluginsToExcel.*
#using AttrCondDefLibrary.*

#rule XMLFolderToExcelFileRule #with PluginsToExcel

#source {
	++xmlFolderDrive:Folder{
		++-subFolder->xmlFolder_1
	}
	++xmlFolder_1:Folder{
		++-subFolder->xmlFolder_2
	}
	++xmlFolder_2:Folder{
	}
}

#target {
	
	//Create header cells
	++componentsCell:Cell{
		text:="Components"
	}
	++dependenciesCell:Cell{
		text:="Dependencies"
	}
	++documentationCell:Cell{
		text:="Documentation"
	}
	++reviewCell:Cell{
		text:="Review"
	}
	
	//create columns and add cells to it
	++componentsColumn:Column{
		++-cell->componentsCell
	}
	++dependenciesColumn:Column{
		++-cell->dependenciesCell
		++-prevColumn->componentsColumn
	}
	++documentationColumn:Column{
		++-cell->documentationCell
		++-prevColumn->dependenciesColumn
	}
	++reviewColumn:Column{
		++-cell->reviewCell
		++-prevColumn->documentationColumn
	}
	
	//create header row and add cells to it
	++headerRow:Row{
		++-cell->componentsCell
		++-cell->dependenciesCell
		++-cell->documentationCell
		++-cell->reviewCell
	}
	
	//create sheet
	++sheet:Sheet {
		//sheet name
		sheetName:= "Plugin.xmls"
		
	 	//columns
		++-colobject->componentsColumn
		++-colobject->dependenciesColumn
		++-colobject->documentationColumn
		++-colobject->reviewColumn
		
		//cells
		++-cell->componentsCell
		++-cell->dependenciesCell
		++-cell->documentationCell
		++-cell->reviewCell
		
		//row
		++-rowobject->headerRow
	}
	
	//create file and add sheet to it.
	++excelFile:File {
		fileName:="Workspace"
		++-sheet -> sheet
	}
}

#correspondence {
	++xmlFolderToExcelFileRule:XMLFolderToExcelFileRelation{
		#src-> xmlFolder_2
		#trg-> excelFile
	}
}

#attributeConditions {
}
